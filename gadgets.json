{
  "greet": {
    "name": "greet",
    "command": "echo Hello, {{who}}!",
    "description": "Greet someone by name.",
    "variables": [
      { "name": "who", "description": "Who to greet", "default": "World" }
    ]
  },
  "filecount": {
    "name": "filecount",
    "command": "ls {{dir}} | wc -l",
    "description": "Count files in a directory.",
    "variables": [
      { "name": "dir", "description": "Directory to count files in", "default": "." }
    ]
  },
  "sayhi": {
    "name": "sayhi",
    "command": "echo Hi there!",
    "description": "Say hi with no variables.",
    "variables": []
  },
  "date": {
    "name": "date",
    "command": "date",
    "description": "Show the current date and time.",
    "variables": []
  },
  "remind": {
    "name": "remind",
    "command": "echo Reminder: {{message}} at {{time}}",
    "description": "Set a reminder message.",
    "variables": [
      { "name": "message", "description": "Reminder message", "default": "Meeting" },
      { "name": "time", "description": "Time for the reminder", "default": "10:00" }
    ]
  }
}
